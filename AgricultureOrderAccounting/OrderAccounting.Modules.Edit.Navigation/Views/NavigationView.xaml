                            <TextBlock VerticalAlignment="Center" Text="Закрити" Foreground="#bb1515" Visibility="{cb:Binding Path=!DataContext.IsEditable, ElementName=wnd, UpdateSourceTrigger=PropertyChanged}" />
                        </StackPanel>
                    </Grid>
                </Button>

