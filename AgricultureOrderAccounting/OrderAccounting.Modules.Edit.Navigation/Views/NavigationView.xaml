                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Button.Triggers>

                    <Grid>
                        <Border Width="150" Height="30" Background="Transparent" BorderBrush="#bb1515" BorderThickness="1" />
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Orientation="Horizontal">
                            <Image Margin="0 2 7 0" VerticalAlignment="Center" Name="plusImage" Width="0" Source="pack://application:,,,/OrderAccounting.Modules.Edit.Navigation;component/Images/cross_red.png" />

