                                            <RowDefinition />
                                        </Grid.RowDefinitions>
                                        <Label Grid.Row="1" HorizontalAlignment="Center" Content="{Binding Title}" Foreground="#477dc6" />

                                        <ProgressBar  VerticalAlignment="Top" Maximum="100" Minimum="0" Value="{Binding Process}" Visibility="{cb:Binding Path=DataContext.IsEditable, ElementName=wnd}" />
                                    </Grid>

                                </Border>

                            </RadioButton>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <Button Grid.Column="1" VerticalAlignment="Bottom" Margin="5 0 0 0" Command="{Binding DataContext.AddAdditionalCommand, ElementName=wnd}" Visibility="{cb:Binding Path=DataContext.IsEditable, ElementName=wnd}" >
                    <Button.Triggers>
                        <EventTrigger RoutedEvent="Button.MouseEnter">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation Storyboard.TargetName="plusImage" Storyboard.TargetProperty="Width" To="10" Duration="0:0:0:0.2" />

                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                        <EventTrigger RoutedEvent="Button.MouseLeave">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation Storyboard.TargetName="plusImage" Storyboard.TargetProperty="Width" To="0" Duration="0:0:0:0.2" />

                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Button.Triggers>

                    <Grid Name="buttonGrid">
                        <Border Width="150" Height="30" Background="#6aa84f" BorderBrush="#6aa84f" BorderThickness="1" />
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Orientation="Horizontal">
                            <Image Margin="0 2 7 0" VerticalAlignment="Center" Name="plusImage" Width="0" Source="pack://application:,,,/OrderAccounting.Modules.Edit.Navigation;component/Images/plus_white.png" />

                            <TextBlock VerticalAlignment="Center" Text="Нова операція" Foreground="White" />
                        </StackPanel>
                    </Grid>
                </Button>
            </Grid>

            <StackPanel Grid.Column="2" Margin="5 10" Orientation="Horizontal" HorizontalAlignment="Right">
                <ContentControl ContentTemplate="{StaticResource CancelButtonTemplate}" />

                <ContentControl ContentTemplate="{StaticResource FinishButtonTemplate}" />

                <ContentControl ContentTemplate="{StaticResource AcceptButtonTemplate}" />

                <ContentControl ContentTemplate="{StaticResource BackButtonTemplate}" />
            </StackPanel>
        </Grid>

    </Grid>

</UserControl>
