                        </StackPanel>
                    </Grid>
                </Button>

                <DataTemplate.Triggers>
                    <DataTrigger Binding="{Binding Path=DataContext.IsEditable, ElementName=wnd, UpdateSourceTrigger=PropertyChanged}" Value="True">
                        <Setter TargetName="acceptButton" Property="Visibility" Value="Visible" />
                    </DataTrigger>
                    <DataTrigger Binding="{Binding Path=DataContext.IsEditable, ElementName=wnd, UpdateSourceTrigger=PropertyChanged}" Value="False">
                        <Setter TargetName="acceptButton" Property="Visibility" Value="Collapsed" />
                    </DataTrigger>
                </DataTemplate.Triggers>

