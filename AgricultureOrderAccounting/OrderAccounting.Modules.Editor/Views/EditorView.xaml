                            <Grid Margin="5" Grid.Row="3" Height="30">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto" />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <dxe:ComboBoxEdit Grid.Column="1" Name="employeeBox" ValidateOnTextInput="False" IncrementalFiltering="True" ImmediatePopup="True" ShowCustomItems="True" VerticalAlignment="Center" NullValueButtonPlacement="EditBox" 
                                              NullText="Водій" ShowNullText="True" ShowNullTextForEmptyValue="True" ItemsSource="{Binding Path=DataContext.DirectoryManager.EmployeesCollection, ElementName=wnd, Mode=TwoWay}" DisplayMember="DisplayName" EditValue="{Binding Driver, UpdateSourceTrigger=PropertyChanged, NotifyOnTargetUpdated=True}"/>
                                
                            </Grid>

                            <StackPanel Grid.Row="4" HorizontalAlignment="Right" Orientation="Horizontal">
                                <Label Margin="10 5" VerticalAlignment="Center" Content="Дозволена швидкість, км" />
                                <dxe:SpinEdit Margin="5" Name="speedBox" MinWidth="80" MinValue="0" EditValue="{Binding Speed, UpdateSourceTrigger=PropertyChanged, NotifyOnTargetUpdated=True}" MaxWidth="150" NullValueButtonPlacement="EditBox" />
                            </StackPanel>

                        </Grid>
                    </Border>

                    <Border Grid.Column="1" Margin="10" BorderThickness="1" BorderBrush="White" >
                        <Grid Margin="5">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                                <RowDefinition Height="auto" />
                            </Grid.RowDefinitions>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto" />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>

                                <Image Margin="10 0" Width="100" VerticalAlignment="Center" Source="{Binding Path=Unit, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource UnitTypeToImageConverter}}" />

                                <ItemsControl  Margin="5 0" Grid.Column="1" ItemsSource="{Binding Path=DataContext.DirectoryManager.UnitUpperTypes, ElementName=wnd, Mode=TwoWay}"
                                               Tag="{Binding }">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <RadioButton Height="30" FontSize="10" Background="LightGreen" Style="{StaticResource SettingsRadioButtonWithCheckStyle}" Content="{Binding UUTName}" GroupName="UnitUpperTypeGroup"
                                                         Command="{Binding Path=Tag.UnitUpperTypeCommand, RelativeSource={RelativeSource  AncestorType={x:Type ItemsControl}}}" CommandParameter="{Binding Identity }"/>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </Grid>

                            <dxe:ComboBoxEdit Name="unitBox" ValidateOnTextInput="False" IncrementalFiltering="True" ImmediatePopup="True" ShowCustomItems="True" Margin="5 10 5 5" Grid.Row="1" VerticalAlignment="Top" NullValueButtonPlacement="EditBox"
                                              NullText="Агрегат" ShowNullText="True" ShowNullTextForEmptyValue="True" DisplayMember="DisplayName" EditValue="{Binding Unit, UpdateSourceTrigger=PropertyChanged, NotifyOnTargetUpdated=True}" >
                                <dxe:ComboBoxEdit.ItemsSource>
                                    <MultiBinding Converter="{StaticResource OperationToUnitMulticonverter}">
                                        <Binding Path="DataContext.OrderViewModel.BaseOperationId" ElementName="wnd" UpdateSourceTrigger="PropertyChanged"/>
                                        <Binding Path="DataContext.OrderViewModel.OperationId" ElementName="wnd" UpdateSourceTrigger="PropertyChanged"/>
                                        <Binding Path="UnitUpperTypeId" UpdateSourceTrigger="PropertyChanged"/>

                                        <Binding Path="DataContext.DirectoryManager" ElementName="wnd" UpdateSourceTrigger="PropertyChanged" />
                                    </MultiBinding>
                                </dxe:ComboBoxEdit.ItemsSource>
                            </dxe:ComboBoxEdit>

                            <StackPanel Margin="5" HorizontalAlignment="Right" VerticalAlignment="Top" Grid.Row="2" Orientation="Horizontal">
                                <Label Margin="10 0" VerticalAlignment="Center" Content="Ширина захвату агрегата, м" />
                                <dxe:SpinEdit Name="widthBox" NullValueButtonPlacement="EditBox" MinValue="0" EditValue="{Binding Width, UpdateSourceTrigger=PropertyChanged, NotifyOnTargetUpdated=True}" Width="80" />
                            </StackPanel>
                        </Grid>
                    </Border>

                </Grid>
            </DataTemplate>

            <DataTemplate x:Key="ObjectTemplate">
                <Grid>
                    <ContentPresenter x:Name="singleObjectTemplate" ContentTemplate="{StaticResource SingleObjectTemplate}" Visibility="Collapsed" />
                    <ContentPresenter x:Name="doubleObjectTemplate" ContentTemplate="{StaticResource DoubleObjectTemplate}" Visibility="Collapsed" />
                </Grid>

                <DataTemplate.Triggers>
                    <DataTrigger Binding="{Binding IsSingleObject}" Value="True">
                        <Setter TargetName="singleObjectTemplate" Property="Visibility" Value="Visible" />
                        <Setter TargetName="doubleObjectTemplate" Property="Visibility" Value="Collapsed" />
                    </DataTrigger>
                    <DataTrigger Binding="{Binding IsSingleObject}" Value="False">
                        <Setter TargetName="singleObjectTemplate" Property="Visibility" Value="Collapsed" />
                        <Setter TargetName="doubleObjectTemplate" Property="Visibility" Value="Visible" />
                    </DataTrigger>
                </DataTemplate.Triggers>
            </DataTemplate>

            <DataTemplate x:Key="EmployeeTemplate">

                <dxg:GridControl HorizontalAlignment="Center" Margin="10" Tag="{Binding }" ItemsSource="{Binding Path=DataContext.DirectoryManager.EmployeesCollection, Mode=TwoWay, ElementName=wnd}">
                    <dxg:GridControl.View>
                        <dxg:TableView AllowEditing="False" ShowVerticalLines="False" ShowIndicator="False" ShowGroupPanel="False" AllowGrouping="False" />
                    </dxg:GridControl.View>

                    <dxg:GridControl.Columns>

                        <dxg:GridColumn Header="" Width="40" Fixed="Left">
                            <dxg:GridColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Name="employeeBox" Style="{StaticResource SettingsButtonStyle}" Background="#6aa84f" ToolTip="Додати співробітника"
                                                    Command="{Binding Path=Tag.AddCommand, RelativeSource={RelativeSource  AncestorType={x:Type dxg:GridControl}}}" CommandParameter="{Binding RowData.Row}">
                                        <Image Name="buttonImage" Width="14" Margin="0 3" VerticalAlignment="Center" Source="pack://application:,,,/OrderAccounting.Modules.Editor;component/Images/add.png" />

                                    </Button>
                                    <DataTemplate.Triggers>
                                        <DataTrigger Binding="{Binding Path=IsEnabled, ElementName=employeeBox, UpdateSourceTrigger=PropertyChanged}" Value="True">
                                            <Setter TargetName="employeeBox" Property="ToolTip" Value="Додати співробітника"/>
                                            <Setter TargetName="buttonImage" Property="Source" Value="pack://application:,,,/OrderAccounting.Modules.Editor;component/Images/add.png"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Path=IsEnabled, ElementName=employeeBox, UpdateSourceTrigger=PropertyChanged}" Value="False">
                                            <Setter TargetName="employeeBox" Property="ToolTip" Value="Співробітник доданий"/>
                                            <Setter TargetName="buttonImage" Property="Source" Value="pack://application:,,,/OrderAccounting.Modules.Editor;component/Images/check_green.png"/>
                                        </DataTrigger>
                                    </DataTemplate.Triggers>
                                </DataTemplate>
                            </dxg:GridColumn.CellTemplate>
                        </dxg:GridColumn>

                        <dxg:GridColumn ReadOnly="True" Header="ПІБ" Width="300" FieldName="FullName" >
                            <dxg:GridColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding RowData.Row.FullName}" FontSize="13" />
                                </DataTemplate>
                            </dxg:GridColumn.CellTemplate>
                        </dxg:GridColumn>

                        <!--<dxg:GridColumn ReadOnly="True" Header="ІПН" Width="150" FieldName="TaxNumber" />-->

                        <dxg:GridColumn ReadOnly="True" Header="Посада" FieldName="PostName"/>

                    </dxg:GridControl.Columns>
                </dxg:GridControl>

            </DataTemplate>

            <ts:OrderItemTemplateSelector x:Key="OrderItemTemplateSelector"
                                           DetailTemplate="{StaticResource DetailTemplate}"
                                           ManualOperationTemplate="{StaticResource ManualOperationTemplate}"
                                           OperationTemplate="{StaticResource OperationTemplate}"
                                           StuffTemplate="{StaticResource StuffTemplate}"
                                           TransportTemplate="{StaticResource TransportTemplate}"
                                           ObjectTemplate="{StaticResource ObjectTemplate}"
                                           EmployeeTemplate="{StaticResource EmployeeTemplate}"/>

            <!-- -->

            <DataTemplate x:Key="DataItemTemplate">
                <Border VerticalAlignment="Center" Margin="10" BorderThickness="1" BorderBrush="White">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto" />
                            <RowDefinition />
                        </Grid.RowDefinitions>

                        <Border Grid.RowSpan="2" Background="#95bcf2" Opacity="0.1" />

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>

                            <Image ToolTip="Інформацію введено" Margin="10 0 0 0" Width="16" Source="pack://application:,,,/OrderAccounting.Modules.Editor;component/Images/check_green.png" 
                                   Visibility="{cb:Binding Path=IsValid, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                            <RadioButton Grid.Column="1" Margin="0 5" Style="{StaticResource HeaderButtonStyle}" Content="{Binding Title}" GroupName="ItemsGroup" Command="{Binding PreviousData.CommitCommand}" 
                                     IsChecked="{Binding IsChecked, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        </Grid>

                        <Expander Grid.Row="1" VerticalAlignment="Center" Style="{StaticResource AnimatedExpanderStyle}" IsExpanded="{Binding IsChecked, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" >

                            <Grid >
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition Height="auto" />
                                </Grid.RowDefinitions>

                                <ContentPresenter IsHitTestVisible="{cb:Binding Path=DataContext.IsEditable, ElementName=wnd, UpdateSourceTrigger=PropertyChanged}" Content="{Binding }" ContentTemplateSelector="{StaticResource OrderItemTemplateSelector}"/>

                                <Grid Grid.Row="1" Margin="10 5 10 10" Visibility="{cb:Binding Path=DataContext.IsEditable, ElementName=wnd, UpdateSourceTrigger=PropertyChanged}">
                                    <Button HorizontalAlignment="Left" VerticalAlignment="Center" Background="#6aa84f" Style="{StaticResource BackButtonStyle}" Command="{Binding ReturnCommand}"/>

                                    <Button HorizontalAlignment="Center" VerticalAlignment="Center" Background="#6aa84f" Style="{StaticResource AddButtonStyle}" Command="{Binding AddCommand}" />

                                    <Button HorizontalAlignment="Right" VerticalAlignment="Center" Background="#6aa84f" Style="{StaticResource NextButtonStyle}" Command="{Binding CommitCommand}" />

                                </Grid>

                            </Grid>
                        </Expander>
                    </Grid>
                </Border>
            </DataTemplate>

        </ResourceDictionary>
    </UserControl.Resources>

    <UserControl.Triggers>
        <EventTrigger RoutedEvent="local:EditorView.ShowView">
            <BeginStoryboard>
                <Storyboard>
                    <DoubleAnimation Storyboard.TargetName="MainGrid" Storyboard.TargetProperty="Opacity" To="1" Duration="0:0:0:0.3" />
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
        <EventTrigger RoutedEvent="local:EditorView.HideView">
            <BeginStoryboard>
                <Storyboard>
                    <DoubleAnimation Storyboard.TargetName="MainGrid" Storyboard.TargetProperty="Opacity" To="0" Duration="0:0:0:0.3" />
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </UserControl.Triggers>

    <Grid Background="WhiteSmoke" Name="MainGrid" Opacity="0">

        <Border Background="#477dc6" Opacity="0.2" />

        <ItemsControl ItemsSource="{Binding OrderViewModel.DataCollection}" ItemTemplate="{StaticResource DataItemTemplate}" />

    </Grid>

</UserControl>