<UserControl x:Class="OrderAccounting.Modules.Editor.Views.EditorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:cb="clr-namespace:CalcBinding;assembly=CalcBinding"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
             xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
             xmlns:local="clr-namespace:OrderAccounting.Modules.Editor.Views"
             xmlns:inf_converter="clr-namespace:OrderAccounting.Common.Infrastructure.Converters;assembly=OrderAccounting.Common.Infrastructure"
             xmlns:ts="clr-namespace:OrderAccounting.Common.Infrastructure.TemplateSelectors;assembly=OrderAccounting.Common.Infrastructure"
             xmlns:ui_converter="clr-namespace:FMS.UI.Classes.Converters;assembly=FMS.UI"
             dx:ThemeManager.ThemeName="Office2013" Name="wnd" >

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/FMS.UI;component/Views/ModernUIStyles/FlatUIButtonsStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <inf_converter:VehicleTypeToImageConverter x:Key="VehicleTypeToImageConverter" />
            <inf_converter:UnitTypeToImageConverter x:Key="UnitTypeToImageConverter" />
            <inf_converter:ObjectTypeToOutlineMulticonverter x:Key="ObjectTypeToOutlineMulticonverter" />
            <inf_converter:FieldToCropPlanMulticonverter x:Key="FieldToCropPlanMulticonverter" />
            <inf_converter:VehicleTypeToModelMulticonverter x:Key="VehicleTypeToModelMulticonverter" />
            <inf_converter:ActualPhaseFromDateMulticonverter x:Key="ActualPhaseFromDateMulticonverter" />
            <inf_converter:PhaseToOperationMulticonverter x:Key="PhaseToOperationMulticonverter" />
            <inf_converter:BaseOperationToOperationMulticonverter x:Key="BaseOperationToOperationMulticonverter" />
            <inf_converter:OperationToVehicleMulticonverter x:Key="OperationToVehicleMulticonverter" />
            <inf_converter:OperationToUnitMulticonverter x:Key="OperationToUnitMulticonverter" />
            <inf_converter:BlockToFieldsMulticonverter x:Key="BlockToFieldsMulticonverter" />

            <ui_converter:CommandMultiParameterConverter x:Key="CommandMultiParameterConverter" />

            <Style TargetType="{x:Type Grid}">
                <Style.Triggers>

                    <Trigger Property="Opacity" Value="0">
                        <Setter Property="Visibility" Value="Collapsed"/>
                    </Trigger>
                    <Trigger Property="Opacity" Value="1">
                        <Setter Property="Visibility" Value="Visible"/>
                    </Trigger>
                </Style.Triggers>
            </Style>

            <Style x:Key="AnimatedExpanderStyle" TargetType="Expander">

                <Setter Property="Template">
                    <Setter.Value>

                        <ControlTemplate TargetType="Expander">

                            <ContentPresenter Name="ExpanderContent" >
                                <ContentPresenter.LayoutTransform>
                                    <ScaleTransform ScaleY="0"/>
                                </ContentPresenter.LayoutTransform>
                            </ContentPresenter>

                            <ControlTemplate.Triggers>
                                <Trigger Property="IsExpanded" Value="True">
                                    <Trigger.EnterActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetName="ExpanderContent"
                                                                                     Storyboard.TargetProperty="(ContentPresenter.LayoutTransform).(ScaleTransform.ScaleY)"
                                                                                     To="1" Duration="0:0:0:0.3"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.EnterActions>
                                    <Trigger.ExitActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetName="ExpanderContent" 
                                                                                     Storyboard.TargetProperty= "(ContentPresenter.LayoutTransform).(ScaleTransform.ScaleY)"
                                                                                     To="0" Duration="0:0:0:0.3"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.ExitActions>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="HeaderButtonStyle" TargetType="{x:Type RadioButton}">
                <Setter Property="ToolTipService.ShowOnDisabled" Value="False" />
                <Setter Property="ToolTipService.IsEnabled" Value="True" />

                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type RadioButton}">
                            <Grid Name="ContentPresenter" Background="Transparent">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="55" />
                                </Grid.ColumnDefinitions>
                                <Label FontSize="14" Margin="10 0 0 5" FontWeight="DemiBold" HorizontalAlignment="Left" VerticalAlignment="Center" Content="{TemplateBinding Content}"/>
                                <Image Name="arrow" Margin="20 0" Grid.Column="1" Width="12" HorizontalAlignment="Center" VerticalAlignment="Center" Source="pack://application:,,,/OrderAccounting.Modules.Editor;component/Images/arrow_black.png" >
                                    <Image.LayoutTransform>
                                        <RotateTransform x:Name="dataRotate" Angle="180" />
                                    </Image.LayoutTransform>
                                </Image>
                            </Grid>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsEnabled" Value="True">
                                    <Setter Property="Opacity" TargetName="ContentPresenter" Value="1"/>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="Opacity" TargetName="ContentPresenter" Value="1"/>
                                </Trigger>
                                <EventTrigger RoutedEvent="Checked">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="dataRotate" Storyboard.TargetProperty="Angle" To="0" Duration="0:0:0:0.0" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                                <EventTrigger RoutedEvent="Unchecked">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="dataRotate" Storyboard.TargetProperty="Angle" To="180" Duration="0:0:0:0.0" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="DetailRadioStyle" TargetType="{x:Type RadioButton}" >
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type RadioButton}">
                            <ContentPresenter x:Name="ContentPresenter" Content="{TemplateBinding Content}" HorizontalAlignment="Center" VerticalAlignment="Center" />

                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="SettingsRadioButtonWithCheckStyle" TargetType="{x:Type RadioButton}">
                <Style.Setters>
                    <Setter Property="IsThreeState" Value="False"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type RadioButton}">
                                <Grid Height="{TemplateBinding Height}" Width="{TemplateBinding Width}">
                                    <Border BorderBrush="White" BorderThickness="1" Opacity="0.5"/>
                                    <Border x:Name="Border" BorderThickness="0" Opacity="0">
                                        <Border.Background>
                                            <SolidColorBrush Color="{Binding Background.Color, RelativeSource={RelativeSource Mode=TemplatedParent}}" />
                                        </Border.Background>
                                    </Border>
                                    <Border x:Name="CheckBorder" Background="LightGreen" Opacity="0"/>
                                    <BulletDecorator>
                                        <Grid >
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="auto" />
                                                <ColumnDefinition />
                                            </Grid.ColumnDefinitions>

                                            <Image Margin="10 0" x:Name="CheckImage" Width="12"  Source="pack://application:,,,/OrderAccounting.Modules.Editor;component/Images/check_white.png" />
                                            <ContentPresenter VerticalAlignment="Center" Grid.Column="1" Content="{TemplateBinding Content}" />
                                        </Grid>
                                    </BulletDecorator>
                                </Grid>

                                <ControlTemplate.Triggers>
                                    <EventTrigger RoutedEvent="RadioButton.MouseEnter">
                                        <EventTrigger.Actions>
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation Storyboard.TargetName="Border" Storyboard.TargetProperty="Opacity" To="0.1" Duration="0:0:0.3" />
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </EventTrigger.Actions>
                                    </EventTrigger>
                                    <EventTrigger RoutedEvent="RadioButton.MouseLeave">
                                        <EventTrigger.Actions>
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation Storyboard.TargetName="Border" Storyboard.TargetProperty="Opacity" To="0" Duration="0:0:0.3" />
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </EventTrigger.Actions>
                                    </EventTrigger>

                                    <Trigger Property="IsChecked" Value="true">
                                        <Setter TargetName="CheckImage" Property="Visibility" Value="Visible" />
                                        <Setter TargetName="CheckBorder" Property="Opacity" Value="0.4" />
                                    </Trigger>
                                    <Trigger Property="IsChecked" Value="false">
                                        <Setter TargetName="CheckImage" Property="Visibility" Value="Hidden" />
                                        <Setter TargetName="CheckBorder" Property="Opacity" Value="0" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style.Setters>
            </Style>

            <Style x:Key="AddButtonStyle" TargetType="{x:Type Button}">
                <Setter Property="ToolTipService.ShowOnDisabled" Value="False" />
                <Setter Property="ToolTipService.IsEnabled" Value="True" />

                <Setter Property="Template">
                    <Setter.Value>

                        <ControlTemplate TargetType="{x:Type Button}">
                            <Grid Name="buttonGrid">
                                <Border Width="120" Height="30" Background="#6aa84f" BorderBrush="#6aa84f" BorderThickness="1" />
                                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Orientation="Horizontal">
                                    <Image Margin="0 2 7 0" VerticalAlignment="Center" Name="plusImage" Width="0" Source="pack://application:,,,/OrderAccounting.Modules.Editor;component/Images/plus_white.png" />

                                    <TextBlock Text="Додати" Foreground="White" />
                                </StackPanel>
                            </Grid>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsEnabled" Value="True">
                                    <Setter Property="Opacity" TargetName="buttonGrid" Value="1"/>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="Opacity" TargetName="buttonGrid" Value="0"/>
                                </Trigger>
                                <EventTrigger RoutedEvent="Button.MouseEnter">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="plusImage" Storyboard.TargetProperty="Width" To="12" Duration="0:0:0:0.2" />

                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                                <EventTrigger RoutedEvent="Button.MouseLeave">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="plusImage" Storyboard.TargetProperty="Width" To="0" Duration="0:0:0:0.2" />

                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>

            </Style>

            <Style x:Key="NextButtonStyle" TargetType="{x:Type Button}" >
                <Setter Property="ToolTipService.ShowOnDisabled" Value="False" />
                <Setter Property="ToolTipService.IsEnabled" Value="True" />

                <Setter Property="Template">
                    <Setter.Value>

                        <ControlTemplate TargetType="{x:Type Button}">
                            <Grid Name="buttonGrid">
                                <Border Width="120" Height="30" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding Background}" BorderThickness="1" />
                                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Orientation="Horizontal">
                                    <TextBlock Text="Продовжити" Foreground="White" />

                                    <Image Margin="7 2 0 0" VerticalAlignment="Center" Name="plusImage" Width="0" Source="pack://application:,,,/OrderAccounting.Modules.Editor;component/Images/arrow.png" />
                                </StackPanel>
                            </Grid>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsEnabled" Value="True">
                                    <Setter Property="Opacity" TargetName="buttonGrid" Value="1"/>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="Opacity" TargetName="buttonGrid" Value="0"/>
                                </Trigger>
                                <EventTrigger RoutedEvent="Button.MouseEnter">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="plusImage" Storyboard.TargetProperty="Width" To="10" Duration="0:0:0:0.2" />

                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                                <EventTrigger RoutedEvent="Button.MouseLeave">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="plusImage" Storyboard.TargetProperty="Width" To="0" Duration="0:0:0:0.2" />

                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="BackButtonStyle" TargetType="{x:Type Button}" >
                <Setter Property="ToolTipService.ShowOnDisabled" Value="False" />
                <Setter Property="ToolTipService.IsEnabled" Value="True" />

                <Setter Property="Template">
                    <Setter.Value>

                        <ControlTemplate TargetType="{x:Type Button}">
                            <Grid Name="buttonGrid">
                                <Border Width="120" Height="30" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding Background}" BorderThickness="1" />
                                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Orientation="Horizontal">
                                    <Image Margin="0 2 7 0" VerticalAlignment="Center" Name="plusImage" Width="0" Source="pack://application:,,,/OrderAccounting.Modules.Editor;component/Images/arrow.png" >
                                        <Image.LayoutTransform>
                                            <RotateTransform Angle="180" />
                                        </Image.LayoutTransform>
                                    </Image>

                                    <TextBlock Text="Назад" Foreground="White" />
                                </StackPanel>
                            </Grid>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsEnabled" Value="True">
                                    <Setter Property="Opacity" TargetName="buttonGrid" Value="1"/>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="Opacity" TargetName="buttonGrid" Value="0"/>
                                </Trigger>
                                <EventTrigger RoutedEvent="Button.MouseEnter">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="plusImage" Storyboard.TargetProperty="Width" To="10" Duration="0:0:0:0.2" />

                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                                <EventTrigger RoutedEvent="Button.MouseLeave">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="plusImage" Storyboard.TargetProperty="Width" To="0" Duration="0:0:0:0.2" />

                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- Object data templates -->

            <DataTemplate x:Key="SingleObjectTemplate">
                <DataTemplate.Triggers>
                    <DataTrigger Binding="{Binding Path=EditValue, ElementName=objectTypeBox, UpdateSourceTrigger=PropertyChanged}" Value="{x:Null}">
                        <DataTrigger.EnterActions>
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation Storyboard.TargetName="objectContentGrid" Storyboard.TargetProperty="Opacity" To="0" Duration="0:0:0:0.3" />
                                    <DoubleAnimation Storyboard.TargetName="fieldDataPanel" Storyboard.TargetProperty="Opacity" To="0" Duration="0:0:0:0.3" />
                                </Storyboard>
                            </BeginStoryboard>
                        </DataTrigger.EnterActions>
                        <DataTrigger.ExitActions>
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation Storyboard.TargetName="objectContentGrid" Storyboard.TargetProperty="Opacity" To="1" Duration="0:0:0:0.3" />
                                    <DoubleAnimation Storyboard.TargetName="fieldDataPanel" Storyboard.TargetProperty="Opacity" To="1" Duration="0:0:0:0.3" />
                                </Storyboard>
                            </BeginStoryboard>
                        </DataTrigger.ExitActions>
                    </DataTrigger>
                </DataTemplate.Triggers>
                <Border Margin="10" BorderThickness="1" BorderBrush="White" >
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition />
                        </Grid.RowDefinitions>

                        <StackPanel Margin="5 0" Orientation="Horizontal">
                            <dxe:ComboBoxEdit Width="200" Name="objectTypeBox" ValidateOnTextInput="False" IncrementalFiltering="True"  ImmediatePopup="True" Margin="5" NullValueButtonPlacement="EditBox"
                                      HorizontalAlignment="Left" ItemsSource="{Binding Path=DataContext.DirectoryManager.ObjectTypesInformation, ElementName=wnd, Mode=TwoWay}" 
                                      NullText="Тип об'єкту" ShowNullText="True" ValueMember="ObjTypeId" DisplayMember="ObjTypeName" SelectedIndex="0"/>

                            <StackPanel Name="fieldDataPanel" Orientation="Horizontal" >
                                <dxe:ComboBoxEdit Width="200" Name="fieldBlockBox" ValidateOnTextInput="False" IncrementalFiltering="True"  ImmediatePopup="True" Margin="10 5" NullValueButtonPlacement="EditBox"
                                      HorizontalAlignment="Left" ItemsSource="{Binding Path=DataContext.DirectoryManager.FieldBlocks, ElementName=wnd, Mode=TwoWay}" 
                                      NullText="Масиви полів" ShowNullText="True" ValueMember="Identity" DisplayMember="FieldBlockName" Visibility="{cb:Binding Path='EditValue == 8', ElementName=objectTypeBox, UpdateSourceTrigger=PropertyChanged}" />
                                <dxe:CheckEdit Margin="5 0" Content="Посівні площі" Name="showCultureBox" IsChecked="False" Visibility="{cb:Binding Path='EditValue == 8', ElementName=objectTypeBox, UpdateSourceTrigger=PropertyChanged}" />
                            </StackPanel>
                        </StackPanel>

                        <Grid Name="objectContentGrid" Grid.Row="1" Visibility="{cb:Binding Path='EditValue != 0', ElementName=objectTypeBox, UpdateSourceTrigger=PropertyChanged}">

                            <dxg:GridControl Margin="10" Tag="{Binding }" MaxHeight="250" 
                                     Visibility="{cb:Binding Path='EditValue != 8', ElementName=objectTypeBox, UpdateSourceTrigger=PropertyChanged}">

                                <dxg:GridControl.ItemsSource>
                                    <MultiBinding Converter="{StaticResource ObjectTypeToOutlineMulticonverter}">
                                        <Binding Path="DataContext.DirectoryManager.OutlinesInformation" Mode="TwoWay" ElementName="wnd" />
                                        <Binding Path="EditValue" UpdateSourceTrigger="PropertyChanged" ElementName="objectTypeBox" />
                                    </MultiBinding>
                                </dxg:GridControl.ItemsSource>

                                <dxg:GridControl.View>
                                    <dxg:TableView AllowEditing="False" ShowVerticalLines="False" ShowIndicator="False" ShowGroupPanel="False" AllowGrouping="False" />
                                </dxg:GridControl.View>

                                <dxg:GridControl.Columns>

                                    <dxg:GridColumn Header="" Width="40" Fixed="Left">
                                        <dxg:GridColumn.CellTemplate>
                                            <DataTemplate>
                                                <Button Name="employeeBox" Style="{StaticResource SettingsButtonStyle}" Background="#6aa84f" ToolTip="Додати об'єкт"
                                                    Command="{Binding Path=Tag.AddCommand, RelativeSource={RelativeSource  AncestorType={x:Type dxg:GridControl}}}" CommandParameter="{Binding RowData.Row}">
                                                    <Image Name="buttonImage" Width="14" Margin="0 3" VerticalAlignment="Center" Source="pack://application:,,,/OrderAccounting.Modules.Editor;component/Images/add.png" />

                                                </Button>
                                                <DataTemplate.Triggers>
                                                    <DataTrigger Binding="{Binding Path=IsEnabled, ElementName=employeeBox, UpdateSourceTrigger=PropertyChanged}" Value="True">
                                                        <Setter TargetName="employeeBox" Property="ToolTip" Value="Додати об'єкт"/>
                                                        <Setter TargetName="buttonImage" Property="Source" Value="pack://application:,,,/OrderAccounting.Modules.Editor;component/Images/add.png"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Path=IsEnabled, ElementName=employeeBox, UpdateSourceTrigger=PropertyChanged}" Value="False">
                                                        <Setter TargetName="employeeBox" Property="ToolTip" Value="Об'єкт додано"/>
                                                        <Setter TargetName="buttonImage" Property="Source" Value="pack://application:,,,/OrderAccounting.Modules.Editor;component/Images/check_green.png"/>
                                                    </DataTrigger>
                                                </DataTemplate.Triggers>
                                            </DataTemplate>
                                        </dxg:GridColumn.CellTemplate>
                                    </dxg:GridColumn>

                                    <dxg:GridColumn SortIndex="0" MinWidth="200" ReadOnly="True" Header="Назва" FieldName="OutName"/>

                                </dxg:GridControl.Columns>
                            </dxg:GridControl>

                            <Grid Visibility="{cb:Binding Path='EditValue == 8', ElementName=objectTypeBox, UpdateSourceTrigger=PropertyChanged}" MaxHeight="250">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>

                                <dxg:GridControl Name="fieldGrid" Margin="10" Tag="{Binding }" >
                                    <dxg:GridControl.View>
                                        <dxg:TableView AllowEditing="False" ShowVerticalLines="False" ShowIndicator="False" ShowGroupPanel="False" AllowGrouping="False" />
                                    </dxg:GridControl.View>

                                    <dxg:GridControl.ItemsSource>
                                        <MultiBinding Converter="{StaticResource BlockToFieldsMulticonverter}">
                                            <Binding Path="DataContext.DirectoryManager.FieldVersions" Mode="TwoWay" ElementName="wnd" />
                                            <Binding Path="EditValue" UpdateSourceTrigger="PropertyChanged" ElementName="fieldBlockBox" />
                                            <Binding Path="Year" UpdateSourceTrigger="PropertyChanged" />
                                        </MultiBinding>
                                    </dxg:GridControl.ItemsSource>

                                    <dxg:GridControl.Columns>

                                        <dxg:GridColumn Header="" Width="40" Fixed="Left" Visible="{cb:Binding Path=!IsChecked, ElementName=showCultureBox, UpdateSourceTrigger=PropertyChanged}">
                                            <dxg:GridColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Button Name="employeeBox" Style="{StaticResource SettingsButtonStyle}" Background="#6aa84f" ToolTip="Додати поле"
                                                    Command="{Binding Path=Tag.AddCommand, RelativeSource={RelativeSource  AncestorType={x:Type dxg:GridControl}}}" CommandParameter="{Binding RowData.Row}">
                                                        <Image Name="buttonImage" Width="14" Margin="0 3" VerticalAlignment="Center" Source="pack://application:,,,/OrderAccounting.Modules.Editor;component/Images/add.png" />

                                                    </Button>
                                                    <DataTemplate.Triggers>
                                                        <DataTrigger Binding="{Binding Path=IsEnabled, ElementName=employeeBox, UpdateSourceTrigger=PropertyChanged}" Value="True">
                                                            <Setter TargetName="employeeBox" Property="ToolTip" Value="Додати поле"/>
                                                            <Setter TargetName="buttonImage" Property="Source" Value="pack://application:,,,/OrderAccounting.Modules.Editor;component/Images/add.png"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Path=IsEnabled, ElementName=employeeBox, UpdateSourceTrigger=PropertyChanged}" Value="False">
                                                            <Setter TargetName="employeeBox" Property="ToolTip" Value="Поле додано"/>
                                                            <Setter TargetName="buttonImage" Property="Source" Value="pack://application:,,,/OrderAccounting.Modules.Editor;component/Images/check_green.png"/>
                                                        </DataTrigger>
                                                    </DataTemplate.Triggers>
                                                </DataTemplate>
                                            </dxg:GridColumn.CellTemplate>
                                        </dxg:GridColumn>

                                        <dxg:GridColumn SortIndex="0" MinWidth="200" ReadOnly="True" Header="Номер поля" FieldName="FVersField.FldNumber" />
                                        <dxg:GridColumn ReadOnly="True" Header="Рік" Width="100" FieldName="FVersYear" />
                                        <dxg:GridColumn ReadOnly="True" Header="Площа, га" Width="100" FieldName="FVersArea" >
                                            <dxg:GridColumn.EditSettings>
                                                <dxe:TextEditSettings DisplayFormat="0.00" />
                                            </dxg:GridColumn.EditSettings>
                                        </dxg:GridColumn>
                                    </dxg:GridControl.Columns>
                                </dxg:GridControl>

                                <dxg:GridControl Grid.Column="1" Margin="10" Tag="{Binding }" 
                                     Visibility="{cb:Binding Path=IsChecked, ElementName=showCultureBox, UpdateSourceTrigger=PropertyChanged}">

                                    <dxg:GridControl.ItemsSource>
                                            <Binding Path="SelectedItem.CropPlans" ElementName="fieldGrid" UpdateSourceTrigger="PropertyChanged" NotifyOnSourceUpdated="True" />
                                    </dxg:GridControl.ItemsSource>

                                    <dxg:GridControl.View>
                                        <dxg:TableView AllowEditing="False" ShowVerticalLines="False" ShowIndicator="False" ShowGroupPanel="False" AllowGrouping="False" />
                                    </dxg:GridControl.View>

                                    <dxg:GridControl.Columns>

                                        <dxg:GridColumn Header="" Width="40" Fixed="Left">
                                            <dxg:GridColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Button Name="employeeBox" Style="{StaticResource SettingsButtonStyle}" Background="#6aa84f" ToolTip="Додати посів"
                                                    Command="{Binding Path=Tag.AddCommand, RelativeSource={RelativeSource  AncestorType={x:Type dxg:GridControl}}}" CommandParameter="{Binding RowData.Row}" >
                                                        <Image Name="buttonImage" Width="14" Margin="0 3" VerticalAlignment="Center" Source="pack://application:,,,/OrderAccounting.Modules.Editor;component/Images/add.png" />

                                                    </Button>
                                                    <DataTemplate.Triggers>
                                                        <DataTrigger Binding="{Binding Path=IsEnabled, ElementName=employeeBox, UpdateSourceTrigger=PropertyChanged}" Value="True">
                                                            <Setter TargetName="employeeBox" Property="ToolTip" Value="Додати посів"/>
                                                            <Setter TargetName="buttonImage" Property="Source" Value="pack://application:,,,/OrderAccounting.Modules.Editor;component/Images/add.png"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding Path=IsEnabled, ElementName=employeeBox, UpdateSourceTrigger=PropertyChanged}" Value="False">
                                                            <Setter TargetName="employeeBox" Property="ToolTip" Value="Посів додано"/>
                                                            <Setter TargetName="buttonImage" Property="Source" Value="pack://application:,,,/OrderAccounting.Modules.Editor;component/Images/check_green.png"/>
                                                        </DataTrigger>
                                                    </DataTemplate.Triggers>
                                                </DataTemplate>
                                            </dxg:GridColumn.CellTemplate>
                                        </dxg:GridColumn>

                                        <dxg:GridColumn SortIndex="0" MinWidth="200" ReadOnly="True" Header="Культура" FieldName="CropPlanCultCrop.CultCropName" />

                                        <dxg:GridColumn ReadOnly="True" Header="Площа, га" Width="100" FieldName="CropPlanArea" >
